    <div class="formAddRoom">
      <h3>Add room</h3>

      <form action="#">
          <label name="nrRoom">Room number: </label>
          <input name="nrRoom" type="text" min="0" placeholder="0"/><br>
          <label for="rooTy">Room type: </label>
